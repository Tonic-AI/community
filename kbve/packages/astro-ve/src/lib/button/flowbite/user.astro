---
export interface Props {
	widget?: string;
	data?: string;
	avatar?: string;
}
const { widget, data, avatar } = Astro.props;
---
<Fragment>
<button
	type="button"
	class="flex mr-3 text-sm bg-zinc-800 rounded-full md:mr-0 focus:ring-4 focus:ring-kbve"
	id="user-menu-button"
	aria-expanded="false"
	data-dropdown-toggle="user-dropdown"
	data-dropdown-placement="bottom">
	<span class="sr-only">Open Drawer</span>
	<img
		class="w-8 h-8 rounded-full hover:scale-110"
		src={avatar}
		alt="user photo"
	/>
</button>

			<!-- Dropdown menu -->
			<div
				class="z-50 hidden my-4 text-base list-none divide-y rounded-lg shadow bg-zinc-800 divide-zinc-600"
				id="user-dropdown">
				<div class="px-4 py-3">
					<span class="block text-sm text-white">Guest</span>
					<span class="block text-sm truncate text-zinc-400">
						hi@herbmail.com
					</span>
				</div>
				<ul class="py-2" aria-labelledby="user-menu-button">
					<li>
						<a
							href="#"
							class="block px-4 py-2 text-sm hover:bg-zinc-600 text-zinc-200 hover:text-white">
							Dashboard
						</a>
					</li>
					<li>
						<a
							href="#"
							class="block px-4 py-2 text-sm hover:bg-zinc-600 text-zinc-200 hover:text-white">
							Settings
						</a>
					</li>
					<li>
						<a
							href="#"
							class="block px-4 py-2 text-sm hover:bg-zinc-600 text-zinc-200 hover:text-white">
							Earnings
						</a>
					</li>
					<li>
						<a
							href="#"
							class="block px-4 py-2 text-sm hover:bg-zinc-600 text-zinc-200 hover:text-white">
							Sign out
						</a>
					</li>
				</ul>
			</div>
</Fragment>